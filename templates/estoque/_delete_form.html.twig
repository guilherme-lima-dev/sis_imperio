<form method="post" action="{{ path('estoque_delete', {'idestoque': estoque.idestoque}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ estoque.idestoque) }}">
    <button class="btn">Delete</button>
</form>
