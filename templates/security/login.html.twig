<div id="login-page">
    <div class="container">
        <form class="form-login" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <h2 class="form-login-heading">√Årea Restrita</h2>
            <div class="login-wrap">
                <input type="text" placeholder="Digite seu login..." value="{{ last_username }}" name="login"
                       id="inputLogin" class="form-control" required autofocus>
                <br>
                <input type="password" placeholder="Digite sua senha..." name="password" id="inputPassword"
                       class="form-control" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <span class="pull-right">
                        <label class="checkbox">
                            <input type="checkbox" name="_remember_me"> Lembrar de mim
                        </label>
                </span>
                <button class="btn btn-theme btn-block" href="index.html" type="submit"><i class="fa fa-lock"></i>
                    ENTRAR
                </button>

            </div>
        </form>
    </div>
</div>
