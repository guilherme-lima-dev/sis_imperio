{% extends 'admin.html.twig' %}

{% block title %}New Usuario{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6"><h1 style="margin: 0;vertical-align: middle;line-height: 30px;font-size: 29px"><span
                            class="text-muted font-weight-light">Controle de Usuário / </span>Cadastrar Usuário</h1>
            </div>
        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-sm-12">
            <div class="panel">
                {{ form_start(form) }}
                <div class="panel-body">
                    {{ form_widget(form) }}
                </div>
                <div class="panel-footer">
                    <a class="btn btn-default" href="{{ path('usuario_index') }}">Voltar à lista</a>
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Salvar') }}</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{#    {{ include('usuario/_form.html.twig') }}#}


{% endblock %}
