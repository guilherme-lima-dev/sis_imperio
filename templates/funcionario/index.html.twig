{% extends 'base.html.twig' %}

{% block title %}Funcionario index{% endblock %}

{% block body %}
    <h1>Funcionario index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idfuncionarios</th>
                <th>Nome</th>
                <th>Cpf</th>
                <th>Endereco</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Foto</th>
                <th>Documento</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for funcionario in funcionarios %}
            <tr>
                <td>{{ funcionario.idfuncionarios }}</td>
                <td>{{ funcionario.nome }}</td>
                <td>{{ funcionario.cpf }}</td>
                <td>{{ funcionario.endereco }}</td>
                <td>{{ funcionario.email }}</td>
                <td>{{ funcionario.telefone }}</td>
                <td>{{ funcionario.foto }}</td>
                <td>{{ funcionario.documento }}</td>
                <td>
                    <a href="{{ path('funcionario_show', {'idfuncionarios': funcionario.idfuncionarios}) }}">show</a>
                    <a href="{{ path('funcionario_edit', {'idfuncionarios': funcionario.idfuncionarios}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('funcionario_new') }}">Create new</a>
{% endblock %}
